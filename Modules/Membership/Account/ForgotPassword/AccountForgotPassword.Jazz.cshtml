@inject Serenity.ITextLocalizer Localizer
@inject Indotalent.IDataMigrations DataMigrations

@{
	ViewData["Title"] = Texts.Forms.Membership.Login.FormTitle.ToString(Localizer);
	ViewData["PageId"] = "Forgot Password";
	ViewData["BodyClass"] = "login-page";
	Layout = MVC.Views.Shared._LayoutNoNavigation;
}

@section Head {
	<link rel="stylesheet" href="~/assets/css/style.css" />
	<link rel="stylesheet" href="~/Serenity.Assets/Content/toastr.css" />
}

<script id="Template_Membership_JazzForgotPasswordPanel" type="text/template">
    <div>
        <form id="~_Form" action="">
            <div class="s-Form">
                <div class="fieldset ui-widget ui-widget-content ui-corner-all">
                    <div id="~_PropertyGrid"></div>
                    <div class="clear"></div>
                </div>
                <div class="buttons">
                    <button id="~_SubmitButton" type="submit" class="btn btn-primary">
                        @Texts.Forms.Membership.ForgotPassword.SubmitButton.ToString(Localizer)
                    </button>
                </div>
            </div>
        </form>
    </div>
</script>

<div class="auth-wrapper aut-bg-img-side cotainer-fiuid align-items-stretch">
	<div class="row align-items-center w-100 align-items-stretch bg-white">
		<div class="d-none d-lg-flex col-lg-8 aut-bg-img align-items-center d-flex justify-content-center">
			<div class="col-md-8">
				<h1 class="text-white mb-5">@Texts.Forms.Membership.ForgotPassword.FormTitle.ToString(Localizer)</h1>
				<p class="text-white">@Texts.Forms.Membership.ForgotPassword.FormInfo.ToString(Localizer)</p>
			</div>
		</div>
		<div class="col-lg-4 align-items-stret h-100 align-items-center d-flex justify-content-center">
			<div class=" auth-content text-center">
				<div class="mb-4">
					<i class="feather icon-mail auth-icon"></i>
				</div>
				<h3 class="mb-4">Reset Password</h3>
				<div id="ForgotPasswordPanel">
				</div>
				<p class="mb-0 text-muted"><a href="@Url.Content("~/Account/Login")"> @Texts.Forms.Membership.SignUp.BackToLogin.ToString(Localizer)</a></p>
			</div>
		</div>
	</div>
</div>





<script type="text/javascript">
	$(function() {
		new Indotalent.Membership.JazzForgotPasswordPanel($('#ForgotPasswordPanel')).init();
	});
</script>